<div class="row my-5">
<div class="col-12">
    <% if (message) { %>
        <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            <strong><%= message.message %></strong>
          </div>
    <% } %>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Sr.</th>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% if (users.length > 0) { %>
                    <% users.forEach( (user, ind) => { %>
                        <tr class="align-middle">
                            <td><%= ind+1 %></td>
                            <td><img src="/img/<%= user.image %>" alt="image" width="50" height="50"></td>
                            <td><%= user.name %></td>
                            <td><%= user.email %></td>
                            <td><%= user.phone %></td>
                            <td>
                                <a href="/update/<%= user._id %>"><i class="fa fa-edit text-success fa-lg me-3"></i></a>
                                <a href="/delete/<%= user._id %>"><i class="fa fa-trash text-danger fa-lg"></i></a>
                            </td>
                        </tr>
                    <% }) %>
                <% } else{ %>
                    <tr>
                        <td colspan="6" class="text-center">No Data Found</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>
</div>